{
    "name": "MechanicsDSL Development",
    "image": "://mcr.microsoft.com",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "charliermarsh.ruff",
                "ms-toolsai.jupyter",
                "redhat.vscode-yaml",
                "tamasfe.even-better-toml"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.provider": "black",
                "editor.formatOnSave": true,
                "python.linting.enabled": true,
                "python.linting.flake8Enabled": true
            }
        }
    },
    "postCreateCommand": "pip install -e '.[dev,test]' && pip install pytest pytest-cov black flake8 mypy",
    "postStartCommand": "nohup uvicorn mechanics_dsl.server.app:app --host 0.0.0.0 --port 8000 > /tmp/api.log 2>&1 & nohup jupyter lab --ip=0.0.0.0 --port=8888 --no-browser > /tmp/jupyter.log 2>&1 &",
    "containerEnv": {
        "PYTHONPATH": "${containerWorkspaceFolder}/src"
    },
    "forwardPorts": [
        8000,
        8888
    ],
    "portsAttributes": {
        "8000": {
            "label": "MechanicsDSL API",
            "onAutoForward": "notify"
        },
        "8888": {
            "label": "Jupyter Lab",
            "onAutoForward": "notify"
        }
    },
    "remoteUser": "vscode"
}
